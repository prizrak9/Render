<Window x:Class="render.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:render"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Image Name="image" SizeChanged="image_SizeChanged" Stretch="Fill" Margin="0,0,0,1"/>
        <Slider Name="slider" VerticalAlignment="Bottom" ValueChanged="Slider_ValueChanged" Height="22" Grid.Row="1" />

    </Grid>
</Window>
